@{
    ViewBag.Title = lang("控制台");
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
}

@section pageheader{
<div class="row">
    <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-dashboard page-header-icon"></i>&nbsp;&nbsp;@lang("控制台")</h1>

    <div class="col-xs-12 col-sm-8">
        <div class="row">
            <hr class="visible-xs no-grid-gutter-h">
            <div class="pull-right col-xs-12 col-sm-auto"><a href="#" class="btn btn-primary btn-labeled" style="width: 100%;"><span class="btn-label icon fa fa-plus"></span>@lang("添加文章")</a></div>

            <div class="visible-xs clearfix form-group-margin"></div>

            <form action="" class="pull-right col-xs-12 col-sm-6">
                <div class="input-group no-margin">
                    <span class="input-group-addon" style="border:none;background: #fff;background: rgba(0,0,0,.05);"><i class="fa fa-search"></i></span>
                    <input type="text" placeholder="@lang("搜索")" class="form-control no-padding-hr" style="border:none;background: #fff;background: rgba(0,0,0,.05);">
                </div>
            </form>
        </div>
    </div>
</div>
}
