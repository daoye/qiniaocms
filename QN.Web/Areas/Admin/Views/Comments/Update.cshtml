@model comment
@{
    activeflag = "commentlist";

    ViewBag.Title = lang("编辑评论");
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <li><a href="@Url.Action("list")">@lang("评论管理")</a></li>
    <li class="active"><a href="@Url.Action("update", new { @id = Model.id })">@lang("编辑评论")</a></li>
}
@section toolbar{
    <div class="page-header">
        <div class="row">
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-comments page-header-icon"></i>&nbsp;&nbsp;@lang("编辑评论")</h1>

            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <div class="pull-right col-xs-12 col-sm-auto">
                    </div>
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}


@using (Html.BeginForm("update", "comments", FormMethod.Post))
{
    @Html.Partial("form", Model)
}