@model post

<tr>
    <td class="text-center"><input class="form-control id-chekcbox" name="id" value="@Model.id" type="checkbox" /></td>
    <td>@Model.id</td>
    <td>
        @img(Model.pic, new { style = "'width:60px; max-height:60px;'" })
    </td>
    <td>
        @Model.title
        <div class="table-row-tool">
            <a class="text-info edit-detail" href="@Url.Action("update", "medias", new { @id = Model.id })"><i class="fa fa-pencil"></i>@lang("编辑详细")</a>
            <a class="text-danger"
               href="@Url.Action("deletepost", new { id = Model.id })"
               ask="@lang("确定删除此项吗（此操作将不可恢复。）？")"><i class="fa fa-times"></i>@lang("删除")</a>
        </div>
    </td>
    <td>@Model.modified.ToLongDateString()</td>
    <td>@Model.commentcount</td>
    <td>@Model.viewcount</td>
    <td>@Model.order</td>
    <td>@Model.status</td>
</tr>
