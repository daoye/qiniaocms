@model site
@{
    ViewBag.active_nav = "siteadd";

    ViewBag.Title = lang("新建站点");
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <li><a href="@Url.Action("list")">@lang("站点管理")</a></li>
    <li class="active"><a href="@Url.Action("add")">@lang("新建站点")</a></li>
}

@using (Html.BeginForm("add", "sites", FormMethod.Post))
{
    @Html.Partial("form", Model)
}

@section footer{
    @scripts("~/scripts/jquery.unobtrusive-ajax.min.js",
            "~/scripts/jquery.validate.unobtrusive.js",
            "~/scripts/admin/validater.js")
}