@model site
@{
    activeflag = "sitescurrent";

    ViewBag.Title = lang("编辑网站信息");
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <li class="active"><a href="@Url.Action("current")">@lang("编辑网站基本信息")</a></li>
}
@section toolbar{
    <div class="page-header">
        <div class="row">
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-cog page-header-icon"></i>&nbsp;&nbsp;@lang("编辑网站基本信息")</h1>

            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <div class="pull-right col-xs-12 col-sm-auto">
                    </div>
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}


@using (Html.BeginForm("current", "sites", FormMethod.Post))
{
    if (ViewBag.updated == true)
    {
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>提示：</strong> 网站基本信息已修改成功。
        </div>
    }

    @Html.Partial("form", Model)
}

@section footer{
@scripts("~/scripts/jquery.unobtrusive-ajax.min.js",
            "~/scripts/jquery.validate.unobtrusive.js",
            "~/scripts/admin/validater.js")
}