@{
    Layout = svroot + "/Views/Shared/_layout.cshtml";
    activeflag = "contact";

    post data = post("contact");

    if (null == data)
    {
        write404();
        return;
    }
}

@css("/styles/inner.css")

<div id="outermain" class="inner">
    <div class="container">
        <section id="maincontent" class="twelve columns">

            <div class="five columns alpha">
                <h2 class="titleBold">登记联系信息</h2>
                <div id="contactform">
                    <form id="contact" action="#">
                    <fieldset>
                        <input type="text" name="name" id="name" size="50" value="姓名" class="text-input" onblur="if (this.value == '') { this.value = '姓名'; }" onfocus="    if (this.value == '姓名') { this.value = ''; }" />
                        <input type="text" name="email" id="email" size="50" value="邮箱" class="text-input" onblur="if (this.value == '') { this.value = '邮箱'; }" onfocus="    if (this.value == '邮箱') { this.value = ''; }" />
                        <input type="text" name="subject" id="subject" value="主题" class="text-input" onblur="if (this.value == '') { this.value = '主题'; }" onfocus="    if (this.value == '主题') { this.value = ''; }" />
                        <textarea cols="60" rows="10" name="msg" id="msg" class="text-input">内容</textarea>
                        <br />
                        <input type="submit" name="submit" class="button mini" id="submit_btn" value="提交" /><br class="clear" />
                    </fieldset>
                    </form>
                </div>
            </div>
            <div class="seven columns omega">
                <h2 class="titleBold">联系方式</h2>
                <div class="">
                    <h5 class="titleSemibold">四川省成都市武侯区科华南路,<br />东苑A区, 8-1-1402</h5>
                    <ul class="noList">
                        <li><span class="txtleft">联系电话:</span><span class="txtright">+86 15908176838</span></li>
                        <li><span class="txtleft">座机:</span><span class="txtright">+86 000 000</span></li>
                        <li><span class="txtleft">传真:</span><span class="txtright">+86 000 000</span></li>
                        <li><span class="txtleft">Email:</span><span class="txtright"><a href="mailto:qiniaosoft@163.com">qiniaosoft@163.com</a></span></li>
                    </ul>
                </div>
            </div>

            <div class="clear"></div>
        </section>
    </div>
</div>
